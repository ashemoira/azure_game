<div>
  <h1>任務編集</h1>
  <div>
    <%= form_with(model: @mission, local: true) do |f| %>
        <% if @mission.errors.any? %>
            <div id="error_explanation">
              <h2>入力エラーがあります</h2>
              <ul>
                <% @mission.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <ul>
          <li>
            <string><%= f.label :title, '任務タイトル' %></string>
            <%= f.text_field :title %>
          </li>
          <li>
            <string><%= f.label :content, '任務内容' %></string>
            <%= f.text_field :content %>
          </li>
          <li>
            <string><%= f.label :mission_type, '任務タイプ' %></string>
            <%= f.select :mission_type, @mission.mission_types.each_with_index {|mt, index|},
                         :include_blank => '選択してください',
                         :selected => @mission.mission_types[@mission.mission_type] %>
          </li>
          <li>
            <string><%= f.label :frequency, '回数' %></string>
            <%= f.number_field :frequency %>
          </li>
          <li>
            <string><%= f.label :reward_id, '報酬id' %></string>
            <%= f.number_field :reward_id %>
          </li>
          <li>
            <string><%= f.label :achievement, '達成済' %></string>
            <%= f.check_box :achievement %>
          </li>
        </ul>
        <%= f.submit '保存' %>
    <% end %>
  </div>
</div>

