<h1>任務登録</h1>
<p>任務の詳細を登録します</p>
<div>
  <div>
    <%= form_with(model: @mission, local: true) do |f| %>
        <% if @mission.errors.any? %>
            <div id="error_explanation">
              <h2>入力エラーがあります</h2>
              <ul>
                <% @mission.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>

        <ul>
          <li>
            <strong><%= f.label :title, '任務タイトル' %></strong>
            <%= f.text_field :title %>
          </li>
          <li>
            <strong><%= f.label :content, '任務内容' %></strong>
            <%= f.text_field :content %>
          </li>
          <li>
            <strong><%= f.label :mission_type, '任務タイプ' %></strong>
            <%= f.select :mission_type, @mission.mission_types.each_with_index {|mt, index|},
                         :include_blank => '選択してください' %>
          </li>
          <li>
            <strong><%= f.label :frequency, '回数' %></strong>
            <%= f.number_field :frequency %>
          </li>
          <li>
            <strong><%= f.label :reward_id, '報酬id' %></strong>
            <%= f.number_field :reward_id %>
          </li>
          <li>
            <strong><%= f.label :achievement, '達成済' %></strong>
            <%= f.check_box :achievement %>
          </li>
        </ul>
        <%= f.submit '保存' %>
    <% end %>
  </div>
</div>
